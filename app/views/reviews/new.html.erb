<head>
  <style>
    body {
      padding-top: 50px;
      padding-bottom: 20px;
    }
  </style>
</head>

<%= form_for @review do |f|%>
  <%= f.label :vacuum_id%>
  <%= f.hidden_field :user_id, value: session[:user_id] %>
  <%= f.collection_select(:vacuum_id, Review.get_all_user_vacuums(session[:user_id]), :id, :name) %>
  <%= f.label :emoji_rating%>
  <%= f.select :emoji_rating, options_for_select(1..5) %>
  <%= f.submit %>
<% end %>
