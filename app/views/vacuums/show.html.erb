<head>
  <style>
    body {
      padding-top: 20px;
      padding-bottom: 20px;
    }
  </style>
</head>

<h1><%= @vacuum.name %></h1>
Rental Price: <%= @vacuum.rental_price %> <br>
Purchase Price: <%= @vacuum.purchase_price %> <br>
Rental Stock: <%= @vacuum.rental_stock %> <br>
Purchase Stock: <%= @vacuum.purchase_stock %> <br>

<% if !session[:user_id].nil? && @vacuum.purchase_stock > 0 %>
  <%= form_tag "/users/#{session[:user_id]}/cart" do%>
    <%= hidden_field_tag 'vacuum_id', @vacuum.id %>
    <%= button_tag type: 'submit', class: 'btn btn-success' do %>
      <span class='glyphicon glyphicon-shopping-cart'></span> Add to Cart
    <% end %>
  <% end %>
<% end %>
