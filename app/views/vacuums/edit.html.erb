<% form_for @vacuum do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :rental_price%>
  <%= f.text_field :rental_price%>
  <%= f.label :purchase_price %>
  <%= f.text_field :purchase_price %>
  <%= f.label :rental_stock%>
  <%= f.text_field :rental_stock%>
  <%= f.label :purchase_stock%>
  <%= f.text_field :purchase_stock%>
  <%= f.submit %>
<% end %>
