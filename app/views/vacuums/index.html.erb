<head>
  <style>
    body {
      padding-top: 20px;
      padding-bottom: 20px;
    }
  </style>
</head>

<div class="container" align="center">
  <div class="align-middle">

    <h1>Our Vacuums</h1>

    <% @vacuums.each do |vacuum|%>
    <h2> <%= link_to vacuum.name, vacuum_path(vacuum) %> </h2>
    Rental Price: $<%= vacuum.rental_price %> <br>
    Purchase Price: $<%= vacuum.purchase_price %> <br>
    Rental Stock: <%= vacuum.rental_stock %> <br>
    Purchase Stock: <%= vacuum.purchase_stock %>
    <% end %>

  </div>
</div>


<% if User.find(session[:user_id]).is_admin?%>
  <center>
    <br>
    <a class="btn btn-success btn-lg" href="/vacuums/new" role="button">Add A Vacuum &raquo;</a>
  </center>
<% end %>
