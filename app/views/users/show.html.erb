<head>
  <style>
    body {
      padding-top: 20px;
      padding-bottom: 20px;
    }
  </style>
</head>

<h1><%= "#{@user.name.titleize}'s profile" %></h1>


<!-- <h3> <%= collection_select(:vacuum, :user_id, Vacuum.all, :id, :name, prompt: "Choose a vacuum") %> </h3> -->

<h2>Vacuums</h2>

<% if ShoppingCart.display_cart(@user.id).empty? && @user.id == session[:user_id] %>
  <p>You have no vacuums...</p>
<% elsif ShoppingCart.display_cart(@user.id).empty? %>
  <p>This user has no vacuums...</p>
<% else %>
  <% ShoppingCart.display_cart(@user.id).each do |vacuum_name, vacuum_count| %>
    <li><%= link_to vacuum_name, vacuum_path(Vacuum.find_by(name: vacuum_name)) %> - <%= vacuum_count %></li>
  <% end %>
<% end %>
